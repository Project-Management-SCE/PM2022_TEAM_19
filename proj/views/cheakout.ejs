  <title>Shopping Cart UI</title>
  <link rel="stylesheet" type="text/css" href="./style.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,900" rel="stylesheet">
</head>

<body>
    <form class="" action="/cart/<%=item._id%>" method="post">

      <div class="CartContainer">
          <div class="Header">
            <h3 class="Heading">Shopping Cart</h3>
          </div>


          <div class="Cart-Items">
            <div class="image-box">
              <img src="https://assets.codepen.io/2301174/icon-team-builder.svg" style={{ height="120px" }} />
            </div>
            <div class="about">
              <!-- <label for="">Parking</label> -->
              <h1 class="title"><%=title%></h1>
              <h3 class="subtitle"><%=description%></h3>

            </div>

            <div class="about">
              <!-- <label for="">Ariivel</label> -->
              <h3 class="subtitle"><%=arrival%></h3>
            </div>

            <div class="about">
              <!-- <label for="">Ariivel</label> -->
              <h3 class="subtitle"><%=price%>₪ For one hour</h3>
            </div>


            <!-- <label for="">Price</label> -->
            <div class="prices">
              <div class="amount"><%=time%> HOURS</div>
          </div>

      </div>

      <hr>



      <div class="checkout">
        <div class="total">
          <div>
            <div class="Subtotal">Amount</div>
            <!-- <div class="items"></div> -->
          </div>
          <div class="total-amount"><%=amount%>₪</div>
        </div>
         <div id="paypal-button-container" ></div>
         </div>




  </div>

  </form>
</body>










