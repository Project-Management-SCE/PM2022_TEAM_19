  <title>Shopping Cart UI</title>
  <link rel="stylesheet" type="text/css" href="./style.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,900" rel="stylesheet">
</head>

<body>
    <form class="" action="/cart/<%=item._id%>" method="post">

      <div class="CartContainer">
          <div class="Header">
            <h3 class="Heading">Shopping Cart</h3>
          </div>


          <div class="Cart-Items">
            <div class="image-box">
              <img src="https://assets.codepen.io/2301174/icon-team-builder.svg" style={{ height="120px" }} />
            </div>
            <div class="about">
              <!-- <label for="">Parking</label> -->
              <h1 class="title"><%=title%></h1>
              <h3 class="subtitle"><%=description%></h3>

            </div>

            <div class="about">
              <!-- <label for="">Ariivel</label> -->
              <h3 class="subtitle"><%=arrival%></h3>
            </div>




            <div class="counter">
              <!-- <label for="">Hours</label> -->
              <select class="form-control" type="text" name="time" placeholder="Enter status">
                <option value="1"> 1h </option>
                <option value="2"> 2h</option>
                <option value="3"> 3h</option>
                <option value="4"> 4h</option>
                <option value="5"> 5h</option>
                <option value="6"> 6h</option>
                <option value="7"> 7h</option>
                <option value="8"> 8h</option>
                <option value="9"> 9h</option>
                <option value="10"> 10h</option>
                <option value="11"> 11h</option>
                <option value="12"> 12h</option>

              </select>

            </div>
         

      </div>

      <hr>



      <div class="checkout">
        <div class="total">
          <div>
            <div class="Subtotal">Sub-Total</div>
            <!-- <div class="items"></div> -->
          </div>
          <div class="total-amount"><%=price%>â‚ª</div>
        </div>
         <button class="button" type="submit">CheckTotal</button>
         </div>




  </div>

  </form>
</body>










